<h1>Nova Despesa de Cartão de Crédito</h1>

<hr>

<div class="row">
  <div class="col-md-12">
    <%= form_for @credit_card_expense do |f| %>
      <div class="form-group">
        <%= f.text_field :description, class: 'form-control', placeholder: 'Descrição' %>
      </div>

      <div class="form-group">
        <%= f.number_field :value, class: 'form-control', placeholder: 'Valor' %>
      </div>

      <div class="form-group">
        <%= f.date_field :date, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.select :category_id, current_user.categories.expense.collect {|c| [ c.name, c.id ] }, {prompt: 'Selecione uma categoria'}, class: 'form-control'  %>
      </div>

      <div class="form-group">
        <%= f.select :credit_card_id, current_user.credit_cards.collect {|c| [ c.name, c.id ] }, {prompt: 'Selecione um cartão de crédito' }, class: 'form-control'  %>
      </div>

      <div class="">
        <%= f.submit "Adicionar", class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
