<div class="row">
  <div class="col-md-12">
    <%= form_for @income do |f| %>
      <div class="form-group">
        <%= f.text_field :description, class: 'form-control', placeholder: 'Descrição' %>
      </div>

      <div class="form-group">
        <%= f.number_field :value, class: 'form-control', placeholder: 'Valor' %>
      </div>

      <div class="form-group">
        <%= f.date_field :date, class: 'form-control', placeholder: 'Data' %>
      </div>

      <div class="form-group">
        <%= f.select :category_id, current_user.categories.income.collect {|c| [ c.name, c.id ] }, {prompt: 'Selecione uma categoria' }, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :recebido %>
        <%= f.check_box :received %>
      </div>

      <div class="form-actions">
        <%= f.submit "Adicionar", class: 'btn btn-success' %>
        <%= link_to 'Voltar', incomes_path ,class: 'btn btn-primary' %>
      </div>

    <% end %>
  </div>
</div>
