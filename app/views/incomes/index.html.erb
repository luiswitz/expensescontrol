<h1>Receitas</h1>
<hr>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Nova', new_income_path, class: 'btn btn-primary pull-right' %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Recebido</th>
            <th>Descrição</th>
            <th>Valor</th>
            <th>Data</th>
            <th>Categoria</th>
          </tr>
        </thead>
        <tbody>
          <% @incomes.each do |income| %>
            <tr>
              <td><%= income.received %></td>
              <td><%= income.description %></td>
              <td><%= income.value %></td>
              <td><%= income.date %></td>
              <td><%= income.category.name %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>
