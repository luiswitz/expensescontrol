<%= form_for @expense do |f| %>
  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label 'Descrição' %>
      <%= f.text_field :description, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-6">
      <%= f.label 'Data da Despesa' %>
      <%= f.date_field :expensed_at, class: 'form-control' %>
    </div>

    <div class="col-md-6">
      <%= f.label 'Valor Total'%>
      <%= f.number_field :value, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label 'Categoria'%>
      <%= f.select :category_id, current_user.categories.expense.collect {|c| [ c.name, c.id ] }, {prompt: 'Selecione uma categoria' }, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label 'Forma de Pagamento'%>
      <%= f.select :form_of_payment, Expense.form_of_payments.collect {|c| [ c[0].capitalize, c[1] ] }, {prompt: 'Forma de Pagamento' }, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label 'Cartão de Crédito', style: 'display: none;' %>
      <%= f.select :credit_card_id, current_user.credit_cards.collect {|c| [ c[0].capitalize, c[1] ] }, {prompt: 'Escolha um cartão de crédito' }, class: 'form-control', style: 'display: none' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-1">
      <%= f.check_box :paid %> Pago
    </div>
    <div class="col-md-2">
      <%= f.check_box :parceled %> Parcelado
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.submit "Adicionar", class: 'btn btn-success' %>
    </div>
  </div>

  <% end %>
</div>
