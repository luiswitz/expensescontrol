<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-success">
      <div class="panel-heading">
        <strong>Registre-se</strong>
      </div>
      <div class="panel-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>

          <div class="form-group">
            <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: 'Nome completo' %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, class: 'form-control', placeholder: 'E-mail' %>
          </div>

          <div class="form-group">
            <% if @minimum_password_length %>
            <em class='text-success'>No m√≠nimo (<%= @minimum_password_length %> caracteres)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Senha' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off" , class: 'form-control', placeholder: 'Confirme a senha' %>
          </div>

          <div class="actions">
            <%= f.submit "Registrar", class: 'btn btn-success' %>
          </div>
        <% end %>
        <hr>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
