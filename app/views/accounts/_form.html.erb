<%= form_for @account do |f| %>
  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label 'Nome' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group row">
    <div class="col-md-12">
      <%= f.label 'Saldo Inicial' %>
      <%= f.number_field :initial_balance, class: 'form-control' %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <%= f.submit 'Adicionar', class: 'btn btn-success' %>
    </div>
  </div>
<% end %>
